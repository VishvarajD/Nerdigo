<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nerdigo - Community Chat</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #1e1e1e;
            color: #ffffff;
            text-align: center;
            margin: 0;
            padding: 20px;
        }
        h1 {
            color: #f1c40f;
            margin-bottom: 10px;
        }
        h3 {
            color: #b3b3b3;
        }
        #chat-box {
            background-color: #2c3e50;
            border: 2px solid #34495e;
            width: 60%;
            height: 400px;
            margin: 20px auto;
            padding: 15px;
            overflow-y: auto;
            border-radius: 10px;
            text-align: left;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.5);
        }
        .message {
            background: #34495e;
            color: #dcdcdc;
            padding: 10px;
            margin: 10px 0;
            border-radius: 10px;
            max-width: 80%;
        }
        .message.user {
            background: #f1c40f;
            color: #1e1e1e;
            text-align: right;
        }
        input[type="text"] {
            width: 60%;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
            border: 2px solid #34495e;
            background-color: #2c3e50;
            color: #fff;
        }
        button {
            background-color: #f1c40f;
            color: #1e1e1e;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
            transition: transform 0.2s ease;
        }
        button:hover {
            transform: translateY(-3px);
        }
    </style>
</head>
<body>
    <h1>Nerdigo Community Chat</h1>
    <h3>Welcome, <span id="usernameDisplay">Guest</span></h3>

    <div id="chat-box">
        <!-- Messages will appear here -->
    </div>
    
    <input type="text" id="chatInput" placeholder="Type your message..." />
    <button onclick="sendMessage()">Send</button>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        function getToken() {
            const token = document.cookie.split('; ').find(row => row.startsWith('token='));
            return token ? token.split('=')[1] : null;
        }

        const token = getToken();

        const socket = io({
            auth: { token }
        });

        let username = "Guest";

        function getUsernameFromToken() {
            if (!token) return "Guest";

            try {
                const payload = JSON.parse(atob(token.split('.')[1])); 
                return payload.username || "Guest"; 
            } catch (err) {
                console.error("Error decoding token:", err);
                return "Guest";
            }
        }

        username = getUsernameFromToken();
        document.getElementById("usernameDisplay").innerText = username;

        function sendMessage() {
            const message = document.getElementById('chatInput').value;
            if (message.trim() === "") return;

            socket.emit('chatMessage', { sender: username, message });
            document.getElementById('chatInput').value = '';
        }

        // Load previous messages when connected
        socket.on('previousMessages', (messages) => {
            const chatBox = document.getElementById('chat-box');
            chatBox.innerHTML = ""; // Clear existing messages

            messages.forEach(msg => {
                chatBox.innerHTML += `<p><strong>${msg.sender}:</strong> ${msg.message} <small>${new Date(msg.timestamp).toLocaleTimeString()}</small></p>`;
            });

            chatBox.scrollTop = chatBox.scrollHeight;
        });

        socket.on('chatMessage', (msgData) => {
            const chatBox = document.getElementById('chat-box');
            chatBox.innerHTML += `<p><strong>${msgData.sender}:</strong> ${msgData.message} <small>${new Date(msgData.timestamp).toLocaleTimeString()}</small></p>`;
            chatBox.scrollTop = chatBox.scrollHeight;
        });
    </script>

</body>
</html>
