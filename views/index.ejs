    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #1e1e1e;
            color: #ffffff;
            text-align: center;
        }
        nav {
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        nav ul {
            list-style: none;
            display: flex;
            gap: 20px;
        }
        nav ul li {
            display: inline;
            font-size: 20px;
        }
        nav a {
            color: #fff;
            text-decoration: none;
            font-weight: 600;
        }
        .cta-button {
            background-color: #f1c40f;
            color: #1e1e1e;
            padding: 13px 20px;
            border: none;
            border-radius: 5px;
            box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
            cursor: pointer;
            transition: transform 0.2s ease;
            font-family: "Piedra", serif;
  font-weight: 700;
  font-style: normal;
  font-size: 20px;
            
        }
        .cta-button:hover {
            transform: translateY(-20px);
           
        }
        .hero-section {
            padding: 100px 20px;
        }
        .tagline {
            font-size: 48px;
            margin-bottom: 10px;
            /* margin-top: 50px; */

        }
        .hero-section p {
            font-size: 18px;
            color: #b3b3b3;
        }
        .Title{
            font-family: "Playwrite IT Moderna", serif;
            font-optical-sizing: auto;
            font-size: 75px;
            color: yellowgreen;
  
  
  font-weight: 800;
  font-style: normal;
        }
        .action-buttons {
            margin-top: 30px;
        }
        .action-buttons a {
            text-decoration: none;
            margin: 0 10px;
        }
        .logo{
            font-family: "Lobster", serif;
            font-weight: 600;
            font-size:35px;
            font-style: normal;
        }

        .info-section {
            background-color: #34495e;
            color: #fff;
            padding: 50px 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 30px;
        }
        .info-text {
            max-width: 400px;
            text-align: left;
        }
        .info-text h2 {
            font-size: 32px;
            color: #f1c40f;
        }
        .info-text p {
            color: #dcdcdc;
        }
        .info-text a {
            color: #f1c40f;
            text-decoration: none;
            font-weight: bold;
        }
        .info-image img {
            max-width: 100%;
            max-height: 30%;
            border-radius: 10px;
        }

        .how-it-works-section {
            background-color: #1e1e1e;
            color: #fff;
            padding: 50px 20px;
            text-align: center;
        }
        .how-it-works-section h2 {
            font-size: 36px;
            color: #f1c40f;
        }
        .steps {
            display: flex;
            justify-content: center;
            gap: 30px;
            flex-wrap: wrap;
        }
        .step {
            background: #34495e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.3);
            max-width: 300px;
        }
        .step h3 {
            color: #f1c40f;
        }
        .step p {
            color: #dcdcdc;
        }
        .footer-section {
    background-color: #1e1e1e;
    color: #dcdcdc;
    padding: 50px 20px;
    text-align: center;
}
.footer-container {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 20px;
}
.footer-logo h2 {
    color: #f1c40f;
}
.footer-links ul {
    list-style: none;
    padding: 0;
}
.footer-links ul li {
    margin: 5px 0;
}
.footer-links a {
    color: #dcdcdc;
    text-decoration: none;
    transition: color 0.3s;
}
.footer-links a:hover {
    color: #f1c40f;
}
.footer-social img {
    width: 30px;
    margin: 0 5px;
    transition: transform 0.3s;
}
.footer-social img:hover {
    transform: scale(1.2);
}
.footer-bottom {
    margin-top: 30px;
    font-size: 14px;
    color: #888;
}
nav ul li a {
    display: inline-block;
    transition: transform 0.7s ease;
}

nav ul li a:hover {
    /* transform: translateY(-5px); */
    transform: translateX(-10px);
}

