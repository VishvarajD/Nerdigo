nav ul li a {
    display: inline-block;
    transition: transform 0.7s ease;
}

nav ul li a:hover {
    /* transform: translateY(-5px); */
    transform: translateX(-10px);
}

.feature-card {
    background: rgba(44, 62, 80, 0.9);
    padding: 25px;
    border-radius: 15px;
    margin: 20px 0;
    text-align: center;
    transition: transform 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-5px);
}

.feature-btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: #f1c40f;
    color: #2c3e50;
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    margin-top: 15px;
    transition: all 0.3s ease;
}

.feature-btn:hover {
    background: #f39c12;
    transform: translateY(-2px);
}

.feature-card h3 {
    color: #f1c40f;
    margin-bottom: 10px;
}

.feature-card p {
    color: #ecf0f1;
    margin-bottom: 15px;
}

.about-nerdigo {
    padding: 80px 0;
    background: rgba(44, 62, 80, 0.9);
}

.about-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.about-header {
    text-align: center;
    margin-bottom: 50px;
}

.about-header h2 {
    font-size: 2.5rem;
    color: #f1c40f;
    margin-bottom: 10px;
    font-family: "Playwrite IT Moderna", serif;
}

.about-header p {
    color: #ecf0f1;
    font-size: 1.2rem;
}

.about-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    padding: 20px;
}

.about-card {
    background: rgba(52, 73, 94, 0.9);
    border-radius: 15px;
    padding: 30px;
    transition: transform 0.3s ease;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(241, 196, 15, 0.1);
}

.about-card:hover {
    transform: translateY(-10px);
}

.card-icon {
    font-size: 2.5rem;
    color: #f1c40f;
    margin-bottom: 20px;
    text-align: center;
}

.about-card h3 {
    color: #f1c40f;
    font-size: 1.5rem;
    margin-bottom: 15px;
    text-align: center;
}

.about-card p {
    color: #ecf0f1;
    margin-bottom: 15px;
}

.about-card ul, .about-card ol {
    color: #ecf0f1;
    padding-left: 20px;
    margin-bottom: 15px;
}

.about-card li {
    margin: 10px 0;
    line-height: 1.6;
}

.about-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #f1c40f, #e74c3c);
}

/* Unique styling for each card */
.about-card.what::before {
    background: linear-gradient(90deg, #3498db, #2980b9);
}

.about-card.why::before {
    background: linear-gradient(90deg, #2ecc71, #27ae60);
}

.about-card.how::before {
    background: linear-gradient(90deg, #e74c3c, #c0392b);
}

@media (max-width: 768px) {
    .about-nerdigo {
        padding: 40px 0;
    }

    .about-header h2 {
        font-size: 2rem;
    }

    .about-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .about-card {
        padding: 20px;
    }
}

