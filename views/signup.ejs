<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nerdigo - Sign Up</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #1e1e1e;
            color: #ffffff;
            text-align: center;
            padding: 50px 20px;
        }
        .signup-container {
            background: #2c3e50;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 2px 2px 15px rgba(0,0,0,0.5);
            width: 90%;
            max-width: 400px;
            margin: auto;
        }
        .signup-container h2 {
            color: #f1c40f;
            margin-bottom: 20px;
        }
        .signup-container input,
        .signup-container select {
            width: 90%;
            padding: 15px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
        }
        .signup-container input[type="text"],
        .signup-container input[type="email"],
        .signup-container input[type="password"],
        .signup-container select {
            background: #34495e;
            color: #fff;
        }
        .signup-container button {
            background-color: #f1c40f;
            color: #1e1e1e;
            padding: 10px;
            width: 95%;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s ease;
        }
        .signup-container button:hover {
            transform: translateY(-3px);
        }
        .signup-container p {
            color: #dcdcdc;
        }
        .signup-container a {
            color: #f1c40f;
            text-decoration: none;
            font-weight: bold;
        }
        .signup-container a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div class="signup-container">
        <h2>Join Nerdigo</h2>
        <form action="/signup" method="POST">
            <select name="accountType" id="accountType" required>
                <option value="">Select Account Type</option>
                <option value="student">Student</option>
                <option value="company">Company</option>
            </select><br>
            <input type="text" name="username" placeholder="Username" required><br>
            <input type="email" name="email" placeholder="Email" required><br>
            <input type="text" name="phone" placeholder="Phone Number" required><br>
            <input type="password" name="password" placeholder="Password" required><br>
        
           
        
            <!-- Student Fields -->
            <div id="studentFields" style="display: none;">
                <input type="text" name="school" placeholder="School/University"><br>
                <input type="text" name="grade" placeholder="Grade"><br>
                <input type="text" name="skills" placeholder="Skills (comma-separated)"><br>
            </div>
        
            <!-- Company Fields -->
            <div id="companyFields" style="display: none;">
                <input type="text" name="companyName" placeholder="Company Name"><br>
                <input type="text" name="website" placeholder="Website"><br>
                <input type="text" name="description" placeholder="Description"><br>
            </div>
        
            <button type="submit">Register</button>
        </form>
        </div>
        
        <script>
            // Show/hide fields based on account type selection
            const accountTypeSelect = document.getElementById('accountType');
            const studentFields = document.getElementById('studentFields');
            const companyFields = document.getElementById('companyFields');
        
            accountTypeSelect.addEventListener('change', function() {
                if (this.value === 'student') {
                    studentFields.style.display = 'block';
                    companyFields.style.display = 'none';
                } else if (this.value === 'company') {
                    studentFields.style.display = 'none';
                    companyFields.style.display = 'block';
                } else {
                    studentFields.style.display = 'none';
                    companyFields.style.display = 'none';
                }
            });
        </script>
        

</body>
</html>
